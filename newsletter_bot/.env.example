# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
DATABASE_URL=sqlite:///newsletter_bot.db

# Application Configuration
DEBUG=True
LOG_LEVEL=INFO

# Gmail API Configuration
# Note: Gmail credentials are stored in credentials.json file
# Set this to false if you want to disable Gmail integration
ENABLE_GMAIL=true

# Newsletter Processing Configuration
MAX_CONTENT_LENGTH=4000
SUMMARY_MAX_TOKENS=500
FETCH_INTERVAL_HOURS=24

# Scheduler Configuration
DAILY_SUMMARY_TIME=09:00
WEEKLY_SUMMARY_TIME=17:00
WEEKLY_SUMMARY_DAY=friday

# Rate Limiting
TELEGRAM_RATE_LIMIT=30
OPENAI_RATE_LIMIT=60

# South African Localization
TIMEZONE=Africa/Johannesburg
CURRENCY=ZAR
LANGUAGE=en-ZA